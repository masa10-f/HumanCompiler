# API Configuration
# Production API URL - set only if not using Vercel rewrites
NEXT_PUBLIC_API_PRODUCTION_URL=https://humancompiler-api-masa.fly.dev

# Preview API URL - for Vercel preview deployments
NEXT_PUBLIC_API_PREVIEW_URL=https://humancompiler-api-masa-preview.fly.dev

# Development API URL - for local development
NEXT_PUBLIC_API_DEVELOPMENT_URL=http://localhost:8000

# Legacy API URL (deprecated - use specific environment URLs above)
NEXT_PUBLIC_API_URL=http://localhost:8000

# API Client Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Logging Configuration
NEXT_PUBLIC_ENABLE_LOGGING=false
NEXT_PUBLIC_LOG_LEVEL=info

# OpenAI Model Configuration
NEXT_PUBLIC_DEFAULT_OPENAI_MODEL=gpt-4

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Application URL (for Supabase redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT="development"
